        .block#sample-4
          h2 フィルター
          p ぼかし、色相を変換、彩度を変換
          svg(width='100%', height='240')
            defs
              // ぼかし
              filter#blur
                fegaussianblur(stddeviation='1')
              // 色相を変換
              filter#rotate
                fecolormatrix(type='hueRotate', values='90')
              // 彩度を変換
              filter#sepia
                fecolormatrix(type='saturate', values='0')
            image.photo1(x='0', y='0', width='300', height='200', xlink:href='./images/sample.jpg')
            image.photo2(x='310', y='0', width='300', height='200', xlink:href='./images/sample.jpg')
            image.photo3(x='620', y='0', width='300', height='200', xlink:href='./images/sample.jpg')



        .block#sample-4
          h2 マスク
          .mask-sample
            img.mask(src="./images/sample.jpg")
            svg.shape(xmlns='http://www.w3.org/2000/svg', width='0', height='0')
              defs
                clipPath#svgPath
                  circle.svg-1(cx='200', cy='200', r='150')
                  circle.svg-2(cx='900', cy='400', r='150')
                  circle.svg-3(cx='400', cy='200', r='80')
